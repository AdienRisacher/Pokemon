{% extends 'base.html.twig' %}
{% block title %}
    {{ 'Connexion' }}
{% endblock %}

{%block stylesheets%}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login_style.css') }}">
{%endblock%}




{% block body %}

<div class="main">
    <div class= "container a-container" id="a-container">
        <form class="form" id="b-form" method="post" >
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h2 class="form_title title">Connecter Vous</h2>
            <input class="form__input" type="text" placeholder="Email" name="email" id="inputEmail" value="{{ last_username }}" required>
            <input class="form__input" type="password" placeholder="Password"  name="password" id="inputPassword" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="form__button button " type="submit" >Connecter</button>
        </form>
    </div>
    <div class=   "switch" id="switch-cnt">
        <div class="switch__circle"></div>
        <div class="switch__circle switch__circle--t"></div>
        <div class="switch__container" id="switch-c1">
            <h2 class="switch__title title">Bonjour!</h2>
            <p class="switch__description description">Entrez vos donn√©es personnelles et commencez une adventure avec nous</p>
            <div class="link"><a href="{{path("inscription")}}"><span>inscrire</span></a> </div>
        </div>

    </div>
</div>

{% endblock %}

